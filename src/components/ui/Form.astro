---
import type { Form as Props } from '~/types';
import Button from '~/components/ui/Button.astro';

const { inputs, textarea, disclaimer, button = 'Contact us', description = '' } = Astro.props;

// Configure your form submission service here
// Option 1: Formspree - Replace YOUR_FORM_ID with your Formspree form ID
// Sign up at https://formspree.io to get your form ID
const FORMSPREE_ENDPOINT = 'https://formspree.io/f/mjgkqdzq';

// hCaptcha Configuration (Free spam protection)
// 1. Sign up at https://www.hcaptcha.com/ (free)
// 2. Add your domain to your hCaptcha account
// 3. Replace YOUR_HCAPTCHA_SITE_KEY with your site key
// Set to empty string '' to disable captcha
const HCAPTCHA_SITE_KEY = '776c6d46-429a-43b8-9d2a-69e62b20a61c';
const enableCaptcha = HCAPTCHA_SITE_KEY && HCAPTCHA_SITE_KEY !== 'YOUR_HCAPTCHA_SITE_KEY';
---

<form action={FORMSPREE_ENDPOINT} method="POST">
  {
    inputs &&
      inputs.map(
        ({ type = 'text', name, label = '', autocomplete = 'on', placeholder = '' }) =>
          name && (
            <div class="mb-6">
              {label && (
                <label for={name} class="block text-sm font-medium">
                  {label}
                </label>
              )}
              <input
                type={type}
                name={name}
                id={name}
                autocomplete={autocomplete}
                placeholder={placeholder}
                class="py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
              />
            </div>
          )
      )
  }

  {
    textarea && (
      <div>
        <label for="textarea" class="block text-sm font-medium">
          {textarea.label}
        </label>
        <textarea
          id="textarea"
          name={textarea.name ? textarea.name : 'message'}
          rows={textarea.rows ? textarea.rows : 4}
          placeholder={textarea.placeholder}
          class="py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
        />
      </div>
    )
  }

  {
    disclaimer && (
      <div class="mt-3 flex items-start">
        <div class="flex mt-0.5">
          <input
            id="disclaimer"
            name="disclaimer"
            type="checkbox"
            class="cursor-pointer mt-1 py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
          />
        </div>
        <div class="ml-3">
          <label for="disclaimer" class="cursor-pointer select-none text-sm text-gray-600 dark:text-gray-400">
            {disclaimer.label}
          </label>
        </div>
      </div>
    )
  }

  {/* hCaptcha widget - renders only when configured */}
  {
    enableCaptcha && (
      <div class="mt-6 h-captcha" data-sitekey={HCAPTCHA_SITE_KEY}></div>
    )
  }

  {
    button && (
      <div class="mt-10 grid">
        <Button variant="primary" type="submit">
          {button}
        </Button>
      </div>
    )
  }

  {
    description && (
      <div class="mt-3 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
      </div>
    )
  }
</form>

{/* Load hCaptcha script only when enabled */}
{enableCaptcha && <script src="https://js.hcaptcha.com/1/api.js" async defer></script>}
