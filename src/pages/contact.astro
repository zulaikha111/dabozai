---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Get in Touch"
    subtitle="Have a question about training programs, research collaboration, or consulting? I'd love to hear from you!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
        placeholder: 'Your name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        placeholder: 'your.email@example.com',
      },
    ]}
    textarea={{
      label: 'Message',
      placeholder: 'How can I help you?',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    button="Send Message"
    description="I typically respond within 24-48 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Other Ways to Reach Me"
    items={[
      {
        title: 'Training Inquiries',
        description:
          'Interested in corporate training, workshops, or customized learning programs? Let me know your requirements.',
        icon: 'tabler:school',
      },
      {
        title: 'Research Collaboration',
        description: 'Open to research partnerships, academic collaborations, and joint publications.',
        icon: 'tabler:flask',
      },
      {
        title: 'Consulting',
        description: 'Available for technical consulting, code reviews, and architecture guidance.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Email',
        description: 'zuzu@dabozai.com',
        icon: 'tabler:mail',
      },
      {
        title: 'LinkedIn',
        description: 'Connect with me on LinkedIn',
        icon: 'tabler:brand-linkedin',
      },
      {
        title: 'GitHub',
        description: 'Check out my open source projects',
        icon: 'tabler:brand-github',
      },
    ]}
  />
</Layout>
